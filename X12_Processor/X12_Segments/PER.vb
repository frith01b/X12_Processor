        SegmentDef.FieldDefList.add(New FieldDef("F01_FUNCTION_ID", "ALPHA", 5, "NONE", "No", 0, "", "NONE", " ", ""))
        SegmentDef.FieldDefList.add(New FieldDef("F02_PER_NAME", "NUMERIC", 15, "NONE", "No", 0, "#,###.00", "NONE", " ", ""))
        SegmentDef.FieldDefList.add(New FieldDef("F03_PER_QUAL1", "ALPHA", 2, "NONE", "No", 0, "", "NONE", " ", ""))
